<!DOCTYPE html>

  <%= render 'layouts/ie' %>

<html class="no-js" lang="en-CA">

  <head id='head'>
    <%= render 'layouts/head' %>
  </head>

  <body id="container" onload="initialize()">

    <header id="banner" class="yui3-u-1 round">

      <section>

        <img id="logo" class="yui3-u-1 round">
          <%= link_to logo, root_path %>
        <img>

        <hgroup id="hgroup">
          <h1><span>The Book of Jack</span></h1>
          <h2><span>An entertaining exploration of all things Jack</span></h2>
        </hgroup>

      </section>

      <section id="main-nav">

        <nav id="main-nav-1" class="yui3-u-1 round">
          <ul>
            <% if mobile_device? %>
              <li><%= link_to "Desktop Site", :mobile => 0 %> | </li>
            <% else %>
              <li><%= link_to "Mobile Site", :mobile => 1 %> | </li>
            <% end %>

            <% if user_signed_in? %>
              Signed in as <%= current_user.email %>. Not you?
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li> |
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %> | </li>
              <li><%= link_to "Sign In", new_user_session_path %></li>
            <% end %>
          </ul>
        </nav>

        <nav id="main-nav-2" class="yui3-u-1 round">
          <ul>
            <li><%= link_to "About", about_book_path %> | </li>
            <li><%= link_to "Articles", root_url %> | </li>
            <li><%= link_to "Map", map_path %> | </li>
            <li><%= link_to "Gallery" %> | </li>
            <li><%= link_to "Contact", contact_path %></li>
          </ul>
        </nav>

        <nav id="main-nav-3" class="yui3-u-1 round">
          <form action="http://localhost:3000/search" id="cse-search-box">
            <input type="hidden" name="cx" value="005048045462197865618:zox2hpboky4" />
            <input type="hidden" name="cof" value="FORID:11;NB:1" />
            <input type="hidden" name="ie" value="UTF-8" />
            <input type="text" name="q" size="31" />
            <input type="submit" name="sa" value="Go" />
          </form>
        </nav>

      </section>

    </header>
    
    <section class="flash_message yui3-u-1 round">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, raw(msg), :id => "flash_#{name}") %>
      <% end %>
    </section>

    <article role="main" id="content" class="yui3-u-1 round">
      <%= yield %>
    </article>

    <footer id="footer" class="round">
      <ul class="right-indent">
        <li><%= link_to "Plagiarism", root_url %> | </li>
        <li>&copy;<%= Date.today.year %> All rights reserved.</li>
      </ul>
    </footer>

    <!-- JavaScript at the bottom for fast page loading -->
    <%= javascript_include_tag 'application' %>

  </body>
</html>
