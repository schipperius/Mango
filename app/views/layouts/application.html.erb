<!DOCTYPE html>
<%= render 'layouts/ie' %>

<html class="no-js" lang="en-CA">

<head id='head'>
<%= render 'layouts/head' %>
</head>

<body id="container" onload="initialize()" class="container-fluid">

  <header id="header" class="row-fluid">
    <section id="logo" class="round">
      <img>
        <%= link_to logo, root_path %>
      <img>
    </section>
    <hgroup id="hgroup">
      <h1><span>The Book of Jack</span></h1>
      <h2><span>An entertaining exploration of all things Jack</span></h2>
    </hgroup>
  </header>

  <section id="main-nav">
    <div class="navbar">
    <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <nav class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Browse Articles", root_url %></li>
          <li class="dropdown">
            <a href="#"
              class="dropdown-toggle"
              data-toggle="dropdown">
              Gallery
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Photos", photos_path %></li>
              <li><%= link_to "Videos", videos_path %></li>
              <li><%= link_to "Music", music_path %></li>
            </ul>
          </li>
          <li><%= link_to "Map", map_path %></li>
        </ul>

          <form class="navbar-search pull-left">
          <input type="text" class="search-query" placeholder="Search Articles">
          </form>

        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#"
              class="dropdown-toggle"
              data-toggle="dropdown">
              About
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Forward", about_book_path %></li>
              <li><%= link_to "Preface", preface_path %></li>
              <li><%= link_to "Author", about_author_path %></li>
              <li><%= link_to "Bibli", acknowledge_path %></li>
              <li><%= link_to "Colophon", colophon_path %></li>
              <li><%= link_to "Plagiarism", root_url %></li>
              <li><%= link_to "Copyright", root_url %></li>
            </ul>
          </li>
          <li><%= link_to "Contact", contact_path %></li>
            <% if mobile_device? %>
          <li><%= link_to "Desktop Site", :mobile => 0 %></li>
            <% else %>
          <li><%= link_to "Mobile Site", :mobile => 1 %></li>
            <% end %>
        </ul>
      </nav>
    </div>
    </div>
    </div>
  </section>

  <section class="flash_message fluid-row round">
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, raw(msg), :id => "flash_#{name}") %>
    <% end %>
  </section>

  <article class="round fluid-row">
    <%= yield %>
  </article>

  <%= javascript_include_tag 'application' %>


  <script src="app/assets/javascripts/deck.core.js"></script>

  <!-- Initialize the deck -->
  <script>
  	$(function() {
  		$.deck('.slide');
  	});
  </script>

</body>
</html>
