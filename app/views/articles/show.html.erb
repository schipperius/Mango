<article id="main" class="yui3-u-1">

  <section id="notice"><%= notice %></section>

  <h2><%= @article.title %></h2>

  <p class="first"><%= @article.introduction %></p>
  
  <p><%= @article.image_url %></p>

  <p><%= @article.description %></p>

  <h3>Footnotes</h3>
  <%= @article.footnotes %>

<p>
  <b>Published at:</b>
  <%= @article.published_at %>
</p>

<p>
  <b>Created at:</b>
  <%= @article.created_at %>
</p>

<p>
  <b>Updated at:</b>
  <%= @article.updated_at %>
</p>

<p>
  <b>Position:</b>
  <%= @article.position %>
</p>

<p>
  <b>Comments count:</b>
  <%= @article.comments_count %>
</p>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

</article>